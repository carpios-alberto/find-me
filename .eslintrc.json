{
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "extends": ["plugin:react/recommended", "plugin:react-hooks/recommended"],
  "rules": {
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "react/prop-types": 0
  }
}
